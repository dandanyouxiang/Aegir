<Window x:Class="Aegir.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Aegir.View"
        xmlns:GL="clr-namespace:AegirGLIntegration;assembly=AegirGLIntegration"
        Title="Aegir - GNSS Simulator" 
        MinHeight="350" 
        MinWidth="525" 
        Height="350" 
        Width="525"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25px"></RowDefinition><!--Menu Strip-->
            <RowDefinition Height="1*"></RowDefinition><!--Main Area-->
            <RowDefinition Height="25px"></RowDefinition><!--StatusBar-->
        </Grid.RowDefinitions>
        <!--Menu Strip-->
        <views:Menu></views:Menu>
        <!--~MenuStrip-->
        <!--Main Area-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280px"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <GL:GLElement Grid.Column="1" ClearColor="CornflowerBlue"/>
            <views:Sidebar/>
        </Grid>
        <!--~MainArea-->
        <!--StatusBar-->
        <views:StatusBar Grid.Row="2"></views:StatusBar>
        <!--~StatusBar-->
    </Grid>
</Window>
