<Window x:Class="Aegir.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Aegir.View"
        xmlns:GL="clr-namespace:AegirGLIntegration;assembly=AegirGLIntegration"
        Title="Aegir - GNSS Simulator" MinHeight="350" MinWidth="525" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20px"></RowDefinition><!--Menu Strip-->
            <RowDefinition Height="1*"></RowDefinition><!--Main Area-->
            <RowDefinition Height="25px"></RowDefinition><!--StatusBar-->
        </Grid.RowDefinitions>
        <!--Menu Strip-->
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New Simulation"></MenuItem>
                <MenuItem Header="Open Simulation"></MenuItem>
                <MenuItem Header="Save Simulation"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Quit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Create"></MenuItem>
            <MenuItem Header="Settings"></MenuItem>
            <MenuItem Header="Helpers">
                <MenuItem IsCheckable="True" Header="Axes"></MenuItem>
                <Separator></Separator>
                <MenuItem IsCheckable="True" Header="Frames Per Second"></MenuItem>
                <MenuItem IsCheckable="True" Header="Simulation Delta Time"></MenuItem>
                <Separator></Separator>
                <MenuItem IsCheckable="True" Header="PC UTC time"></MenuItem>
                <MenuItem IsCheckable="True" Header="Simulation UTC Time"></MenuItem>
            </MenuItem>
        </Menu>
        <!--~MenuStrip-->
        <!--Main Area-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200px"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <views:Sidebar></views:Sidebar>
            <GL:GLElement Grid.Column="1" ClearColor="CornflowerBlue"></GL:GLElement>
        </Grid>
        <!--~MainArea-->
        <!--StatusBar-->
        <StatusBar Grid.Row="2" DataContext="{Binding StatusBarVM, Source={StaticResource VMLocator}}">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Text="Replaying Data"></TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <TextBlock Text="LOG XXXX-XX-XX.log"></TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="2">
                <TextBlock Text="4 Outputs">
                    <TextBlock.ToolTip>
                        <TextBlock>Click To Open Overview</TextBlock>
                    </TextBlock.ToolTip>
                    <TextBlock.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Show Outputs"></MenuItem>
                            <MenuItem Header="Pause All"></MenuItem>
                            <MenuItem Header="Un-Pause All" IsEnabled="False"></MenuItem>
                        </ContextMenu>
                    </TextBlock.ContextMenu>
                </TextBlock>
            </StatusBarItem>
        </StatusBar> 
        <!--~StatusBar-->
    </Grid>
</Window>
