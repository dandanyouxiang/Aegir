<UserControl x:Class="Aegir.View.SimulationRendering"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gl="clr-namespace:AegirGLIntegration;assembly=AegirGLIntegration"
             xmlns:bh="clr-namespace:AttachedCommandBehavior;assembly=AttachedCommandBehavior"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300"
             DataContext="{Binding RenderingVM, Source={StaticResource VMLocator}}">
    <Grid>
        <gl:GLElement>
            <gl:GLElement.ClearColor>
                <Color R="69" G="69" B="69"></Color>
            </gl:GLElement.ClearColor>
            <bh:CommandBehaviorCollection.Behaviors>
                <bh:BehaviorBinding Event="GLInitialized" Command="{Binding RenderInitalizedCommand}"></bh:BehaviorBinding>
            </bh:CommandBehaviorCollection.Behaviors>
        </gl:GLElement>
    </Grid>
</UserControl>
