<UserControl x:Class="Aegir.View.ComponentEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:wpg="clr-namespace:System.Windows.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:PropVM="clr-namespace:Aegir.ViewModel.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid DataContext="{Binding PropertiesVM, Source={StaticResource VMLocator}}">
        <ItemsControl ItemsSource="{Binding Components}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type PropVM:PropertiesComponentViewModel}">
                    <Expander Header="{Binding ComponentName}" IsExpanded="True">
                        <wpg:WpfPropertyGrid SelectedObject="{Binding Component}"
                                 ToolbarVisible="False"
                                 ShowGridLines="False">
                        </wpg:WpfPropertyGrid>
                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
